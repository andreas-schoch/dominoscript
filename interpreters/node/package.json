{
  "name": "dominoscript",
  "version": "0.0.2",
  "description": "A recreational stack-oriented concatenative two-dimensional non-linear self-modifying esoteric programming language that uses the dots on domino pieces to represent code.",
  "type": "module",
  "main": "./dist/Runner.js",
  "module": "./dist/Runner.js",
  "types": "./dist/Runner.d.ts",
  "bin": {
    "dominoscript": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "c8": {
    "include": "src",
    "exclude": ["**/*.spec.ts"]
  },
  "scripts": {
    "ds": "node dist/bin/cli.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "c8 --reporter=lcov mocha"
  },
  "keywords": [
    "esoteric programming language",
    "esolang",
    "domino",
    "interpreter",
    "compiler",
    "self-modifying",
    "two-dimensional",
    "concatenative",
    "stack-oriented"
  ],
  "author": "Andreas Schoch",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "mocha": "^10.7.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
